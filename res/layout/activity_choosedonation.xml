<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Choosedonation" >
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Choosedonation" >
    
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg"
         />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton1"
        android:text="Donate for the poor child
Rs.100 and above
clickhere"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#982C7D" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageButton1"
        android:src="@drawable/bg" />
   

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageButton2"
        android:text="Donate for the child education 
Rs.500 and above
clickhere"
		android:textColor="#982C7D" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_alignParentRight="true"
        android:background="#8B7FBA"
        android:text="Donate"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton2"
        android:src="@drawable/bg" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_marginTop="14dp"
        android:text="Donate for the Victims 
Rs.300 and above
clickhere"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#982C7D" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:background="#8B7FBA"
        android:text="Donate"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:typeface="sans" />

    

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:background="#8B7FBA"
        android:text="Donate"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton3"
        android:src="@drawable/bg" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_marginTop="14dp"
        android:text="Donate for Handicapped 
Rs. 2000 and above
click here"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#982C7D"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:background="#8B7FBA"
        android:text="Donate"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Donation Page"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/Button5"
        style="?android:attr/buttonStyleToggle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView2"
        android:background="#8B7FBA"
        android:text="Logout"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:typeface="sans" />

</RelativeLayout>
</ScrollView>